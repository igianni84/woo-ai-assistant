<?xml version="1.0"?>
<ruleset name="Woo AI Assistant">
    <description>Custom coding standards for Woo AI Assistant plugin.</description>
    
    <!-- Exclude vendor and node_modules -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*/.git/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    
    <!-- Use PSR12 as base standard -->
    <rule ref="PSR12">
        <!-- Allow side effects in main plugin files -->
        <exclude name="PSR1.Files.SideEffects"/>
        <!-- Relax line length restrictions -->
        <exclude name="Generic.Files.LineLength"/>
        <!-- Allow constants without visibility for backward compatibility -->
        <exclude name="PSR12.Properties.ConstantVisibility"/>
    </rule>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
    
    <!-- Use colors -->
    <arg name="colors"/>
    
    <!-- Check only source files -->
    <file>src</file>
</ruleset>