# Woo AI Assistant Development Configuration
# ==========================================
# This file contains development-only configuration settings.
# Copy this file to .env.development and fill in your development API keys.
# IMPORTANT: Never commit actual API keys to version control.

# Development Mode - Enables special development behaviors
WOO_AI_DEVELOPMENT_MODE=true
WOO_AI_ASSISTANT_DEBUG=true

# License Configuration - Development mode bypasses license validation
# Any value will be accepted as a valid license key in development mode
WOO_AI_DEVELOPMENT_LICENSE_KEY=dev-license-12345

# API Keys for Development Testing
# ================================

# OpenRouter API Key (for AI chat functionality)
# Get your key from: https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key-here

# OpenAI API Key (for embeddings generation)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Pinecone API Key (for vector database)
# Get your key from: https://www.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here

# Pinecone Environment and Index Configuration
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=woo-ai-assistant-dev

# Google/Gemini API Key (alternative AI provider)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Development Server Configuration
# ===============================

# Local development server URL (when running intermediate server locally)
WOO_AI_DEVELOPMENT_SERVER_URL=http://localhost:3000

# Development database settings (optional - for testing with different DB)
# WOO_AI_DEV_DB_HOST=localhost:8889
# WOO_AI_DEV_DB_NAME=wp_woo_ai_dev
# WOO_AI_DEV_DB_USER=root
# WOO_AI_DEV_DB_PASS=root

# Feature Flags for Development
# =============================

# Enable dummy/mock data for testing without real API calls
WOO_AI_USE_DUMMY_DATA=true

# Enable enhanced debug logging
WOO_AI_ENHANCED_DEBUG=true

# Skip external API calls for faster testing
WOO_AI_MOCK_API_CALLS=false

# Development Performance Settings
# ===============================

# Reduced timeouts for faster development feedback
WOO_AI_DEV_API_TIMEOUT=10

# Cache TTL in seconds (shorter for development)
WOO_AI_DEV_CACHE_TTL=60

# Maximum items to process in development (to avoid overwhelming APIs)
WOO_AI_DEV_MAX_ITEMS=10

# Development Email Settings
# =========================

# Email for development notifications (optional)
WOO_AI_DEV_EMAIL=developer@localhost.dev

# Development Analytics
# ====================

# Disable analytics in development
WOO_AI_DISABLE_ANALYTICS=true

# Testing Configuration
# ====================

# Enable test data seeding
WOO_AI_ENABLE_TEST_DATA=true

# Test conversation limits (lower for development testing)
WOO_AI_DEV_CONVERSATION_LIMIT=5

# PHPUnit and testing configuration
WOO_AI_TEST_MODE=false

# NOTES:
# ======
# 1. This file is for DEVELOPMENT ONLY - never use these settings in production
# 2. Copy this file to .env.development and customize values
# 3. Add .env.development to .gitignore to prevent committing real API keys
# 4. All development configurations are automatically loaded when WOO_AI_DEVELOPMENT_MODE=true
# 5. Development mode automatically bypasses license validation