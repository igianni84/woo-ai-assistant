        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "phpstan",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "message": 3
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
