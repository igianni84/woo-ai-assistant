{
    "name": "woo-ai-assistant",
    "version": "1.0.0",
    "description": "React-based chat widget for Woo AI Assistant plugin",
    "main": "widget-src/src/index.js",
    "scripts": {
        "start": "webpack serve --mode development --config webpack.config.js",
        "build": "webpack --mode production",
        "watch": "webpack --watch --mode development",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint widget-src/src --ext .js,.jsx",
        "lint:fix": "eslint widget-src/src --ext .js,.jsx --fix",
        "analyze": "webpack-bundle-analyzer dist/stats.json",
        "clean": "rm -rf assets/js assets/css dist coverage",
        "check:bundle-size": "size-limit",
        "pre-commit": "bash scripts/setup-git-hooks.sh install && npm run lint && npm test -- --passWithNoTests",
        "setup:hooks": "bash scripts/setup-git-hooks.sh install",
        "hooks:status": "bash scripts/setup-git-hooks.sh status",
        "deploy:dev": "bash scripts/deploy.sh --environment development",
        "deploy:staging": "bash scripts/deploy.sh --environment staging",
        "deploy:prod": "bash scripts/deploy.sh --environment production"
    },
    "keywords": [
        "wordpress",
        "woocommerce",
        "ai",
        "chatbot",
        "react"
    ],
    "author": "Woo AI Assistant Team",
    "license": "GPL-2.0-or-later",
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "prop-types": "^15.8.1"
    },
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "@babel/preset-react": "^7.22.0",
        "@babel/plugin-transform-runtime": "^7.23.0",
        "@testing-library/react": "^14.0.0",
        "@testing-library/jest-dom": "^6.1.0",
        "@testing-library/user-event": "^14.5.0",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.1.0",
        "core-js": "^3.33.0",
        "css-loader": "^6.8.0",
        "eslint": "^8.50.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-react": "^7.33.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "mini-css-extract-plugin": "^2.7.0",
        "prettier": "^3.0.0",
        "sass": "^1.69.0",
        "sass-loader": "^13.3.0",
        "size-limit": "^10.0.0",
        "style-loader": "^3.3.0",
        "terser-webpack-plugin": "^5.3.0",
        "webpack": "^5.89.0",
        "webpack-bundle-analyzer": "^4.9.0",
        "webpack-cli": "^5.1.0",
        "webpack-dev-server": "^4.15.0"
    },
    "size-limit": [
        {
            "path": "assets/js/widget.js",
            "limit": "50 KB"
        }
    ],
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}