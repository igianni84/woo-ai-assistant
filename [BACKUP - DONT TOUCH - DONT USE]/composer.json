{
    "name": "woo-ai-assistant/woo-ai-assistant",
    "description": "AI-powered chatbot for WooCommerce with zero-config knowledge base",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6",
        "brain/monkey": "^2.6",
        "wp-phpunit/wp-phpunit": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "WooAiAssistant\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WooAiAssistant\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs --standard=PSR12 --extensions=php src/",
        "phpcbf": "phpcbf --standard=PSR12 --extensions=php src/",
        "phpstan": "phpstan analyse src/ --level=5",
        "verify-all": "bash scripts/quality-gates-enforcer.sh",
        "verify-paths": "bash scripts/verify-paths.sh",
        "verify-standards": "php scripts/verify-standards.php",
        "quality-gates-enforce": "bash scripts/quality-gates-enforcer.sh",
        "quality-gates-check": "cat .quality-gates-status 2>/dev/null || echo 'NOT_RUN'",
        "quality-gates-reset": "rm -f .quality-gates-status"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}