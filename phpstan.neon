parameters:
    level: 0
    paths:
        - src
    tmpDir: tmp/phpstan
    
    # Ignore all WordPress-related issues for now
    ignoreErrors:
        - '#.*#'
        
    # Exclude paths
    excludePaths:
        - tests/*
        - vendor/*
        - node_modules/*
        
    # Basic checks only
    reportUnmatchedIgnoredErrors: false