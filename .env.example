# Woo AI Assistant - Development Environment Configuration
# Copy this file to .env and fill in your actual API keys for testing
# WARNING: This file should NEVER be committed to version control!
# These keys are ONLY for local development/testing

# ============================================
# INTERMEDIATE SERVER CONFIGURATION
# ============================================
# In production, the plugin will only use these two settings:
WOO_AI_SERVER_URL=http://localhost:3000
WOO_AI_LICENSE_KEY=dev-license-key-12345

# ============================================
# DEVELOPMENT MODE API KEYS
# ============================================
# These keys are ONLY used in development mode to bypass the intermediate server
# In production, ALL these keys would be on the intermediate server only

# OpenRouter API (for Gemini 2.5 Flash/Pro)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here

# OpenAI API (for embeddings generation - text-embedding-3-small)
OPENAI_API_KEY=sk-your-openai-key-here

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=woo-ai-assistant-dev

# Stripe Payment Processing (test keys for license management)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Enable development mode (uses local API keys instead of server)
WOO_AI_DEVELOPMENT_MODE=true

# Enable debug logging
WOO_AI_DEBUG=true
WOO_AI_LOG_API_CALLS=true

# Cache settings (shorter for development)
WOO_AI_CACHE_TTL=60

# Use dummy data when APIs are not available
WOO_AI_USE_DUMMY_EMBEDDINGS=false
WOO_AI_USE_DUMMY_AI_RESPONSES=false

# ============================================
# AI MODEL CONFIGURATION
# ============================================
# These would normally be configured on the intermediate server
WOO_AI_PRIMARY_MODEL=google/gemini-2.0-flash-exp:free
WOO_AI_FALLBACK_MODEL=google/gemini-2.0-flash-thinking-exp:free
WOO_AI_EMBEDDING_MODEL=text-embedding-3-small

# Model parameters
WOO_AI_MAX_TOKENS=2000
WOO_AI_TEMPERATURE=0.7
WOO_AI_TOP_P=0.9

# ============================================
# RATE LIMITING (Development)
# ============================================
WOO_AI_RATE_LIMIT_ENABLED=false
WOO_AI_MAX_REQUESTS_PER_MINUTE=60
WOO_AI_MAX_REQUESTS_PER_HOUR=1000

# ============================================
# DATABASE CONFIGURATION (for development)
# ============================================
# These are usually auto-detected from WordPress
DB_HOST=localhost:8889
DB_NAME=wordpress
DB_USER=root
DB_PASSWORD=root

# ============================================
# WORDPRESS CONFIGURATION (for CLI testing)
# ============================================
WP_HOME=http://localhost:8888/wp
WP_SITEURL=http://localhost:8888/wp
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# ============================================
# TESTING CONFIGURATION
# ============================================
# Test user credentials for automated testing
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test123
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=admin123

# Test data generation
GENERATE_TEST_PRODUCTS=true
TEST_PRODUCTS_COUNT=50
GENERATE_TEST_ORDERS=true
TEST_ORDERS_COUNT=100

# ============================================
# NOTES FOR DEVELOPERS
# ============================================
# 1. This configuration is ONLY for local development
# 2. In production, the plugin uses ONLY the license key
# 3. The intermediate server handles all API keys securely
# 4. Never commit this file with real API keys
# 5. Use test/sandbox keys whenever possible